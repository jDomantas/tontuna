{
    "name": "tontuna-vscode",
    "displayName": "Tontuna",
    "description": "",
    "version": "0.0.1",
    "publisher": "jDomantas",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:tontuna",
        "onCommand:tontuna.restartServer",
        "onCommand:tontuna.shutdownServer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Tontuna",
                "properties": {
                    "tic.languageServerPath": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "Path to tontuna language server executable",
                        "scope": "window"
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "tontuna",
                "aliases": [
                    "Tontuna",
                    "tontuna"
                ],
                "extensions": [
                    "tnt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "tontuna.restartServer",
                "title": "Restart tontuna language server"
            },
            {
                "command": "tontuna.shutdownServer",
                "title": "Shut down tontuna language server"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.52.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.15.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    }
}
